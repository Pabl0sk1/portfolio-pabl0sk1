---
const { Icon, label, link } = Astro.props;
---

<a
  href={link}
  target="_blank"
  class="group flex flex-col items-center gap-2 p-4 rounded-xl shadow-sm bg-gray-300 hover:bg-gray-500 dark:bg-white/5 dark:hover:bg-white/10 hover:shadow-md transition-all duration-200"
>
  <Icon class="w-10 h-10" />
  <span
    class="text-sm text-gray-900 group-hover:text-blue-400 dark:text-white/85 dark:group-hover:text-blue-200 group-hover:font-bold"
  >
    {label}
  </span>
</a>

---
const {} = Astro.props;
---

<form
  name="contact"
  method="POST"
  data-netlify="true"
  class="flex flex-col gap-4 bg-white/5 p-6 rounded-xl shadow-lg"
>
  <input type="hidden" name="form-name" value="contact" />

  <div class="flex flex-col">
    <label class="text-sm font-medium text-gray-300">Nombre</label>
    <input
      type="text"
      name="name"
      placeholder="Escriba el nombre"
      class="mt-2 p-2 rounded-lg bg-white/10 text-white"
      required
    />
  </div>

  <div class="flex flex-col">
    <label class="text-sm font-medium text-gray-300">Correo</label>
    <input
      type="email"
      name="email"
      placeholder="Escriba el correo"
      class="mt-2 p-2 rounded-lg bg-white/10 text-white"
      required
    />
  </div>

  <div class="flex flex-col">
    <label class="text-sm font-medium text-gray-300">Asunto</label>
    <input
      type="text"
      name="subject"
      placeholder="Escriba el asunto"
      class="mt-2 p-2 rounded-lg bg-white/10 text-white"
      required
    />
  </div>

  <div class="flex flex-col">
    <label class="text-sm font-medium text-gray-300">Mensaje</label>
    <textarea
      name="message"
      placeholder="Escriba el mensaje"
      class="mt-2 p-2 rounded-lg bg-white/10 text-white"
      rows="5"
      required></textarea>
  </div>

  <button
    type="submit"
    class="mt-4 bg-yellow-500 text-black font-bold py-2 rounded-lg hover:bg-yellow-400 transition-all cursor-pointer"
  >
    Enviar Mensaje
  </button>
</form>
